.tmpContainer{
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #eee;
  margin-top: 10rpx;
  
}
.avatar_date{
  padding: 10rpx;
}
.avatar_date image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.avatar_date text{
  font-size: 32rpx;
}
.word{
  margin-left: 10rpx;
  font-size: 34rpx;
  font-weight: 600;
  margin: 10rpx;
}
.contentImg{
  width: 100%;
  height: 460rpx;

}
.text{
  margin-top: 10rpx;
  font-size: 32rpx;
  text-indent: 32rpx;
}
.collection_love{
  margin-bottom: 10rpx;
}
.collection_love image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 10rpx;
  margin-left: 10rpx;
  
}
.collection_love text{
  font-size: 28rpx;
 
}