/* pages/movies/movies.wxss */
.moviesContainer{
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.movieImg
{
  width: 128rpx;
  height: 128rpx;
}
.movie_detail{
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-left: 20rpx;
}
.movie_name{ 
  font-size: 34rpx;
  color: #000;
  white-space: nowrap;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie_year{
  font-size: 30rpx;
  color: #666;
  margin: 8rpx 0;
}
.movie_dancer{
  font-size: 32rpx;
  color: #333;
}
.movie_rating{
  font-size: 40rpx;
  color: red;
  font-weight: bold;  
}